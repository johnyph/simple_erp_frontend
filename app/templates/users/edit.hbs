<div class="panel panel-default">
  <div class="panel-body">
   <form class="form-horizontal">
          
      <div class="form-group">
        <label for="first_name" class="col-sm-4">Όνομα</label>
        <div class="col-sm-8">
          {{input value=user.first_name class="form-control"}}
        </div>
        <div class="col-sm-12">
          {{#if errors.model.first_name.firstObject}}
          <div class="text-danger" role="alert"><i class="fa fa-exclamation-triangle"></i> {{errors.model.first_name.firstObject}}</div>
          {{/if}}
        </div>
      </div>

      <div class="form-group">
        <label for="last_name" class="col-sm-4">Επώνυνμο</label>
        <div class="col-sm-8">
          {{input value=user.last_name class="form-control"}}
        </div>
        <div class="col-sm-12">
          {{#if errors.model.last_name.firstObject}}
          <div class="text-danger" role="alert"><i class="fa fa-exclamation-triangle"></i> {{errors.model.last_name.firstObject}}</div>
          {{/if}}
        </div>
      </div>
      
      <div class="form-group">
        <label for="afm" class="col-sm-4">ΑΦΜ</label>
        <div class="col-sm-8">
          {{input value=user.afm class="form-control"}}
        </div>
        <div class="col-sm-12">
          {{#if errors.model.afm.firstObject}}
          <div class="text-danger" role="alert"><i class="fa fa-exclamation-triangle"></i> {{errors.model.afm.firstObject}}</div>
          {{/if}}
        </div>
      </div>

      <div class="form-group">
        <label for="email" class="col-sm-4">Email</label>
        <div class="col-sm-8">
          {{input value=user.email class="form-control"}}
        </div>
        <div class="col-sm-12">
          {{#if errors.model.email.firstObject}}
          <div class="text-danger" role="alert"><i class="fa fa-exclamation-triangle"></i> {{errors.model.email.firstObject}}</div>
          {{/if}}
        </div>
      </div>

      <div class="form-group">
        <label for="phone" class="col-sm-4">Τηλέφωνο</label>
        <div class="col-sm-8">
          {{input value=user.phone class="form-control"}}
        </div>
        <div class="col-sm-12">
          {{#if errors.model.phone.firstObject}}
          <div class="text-danger" role="alert"><i class="fa fa-exclamation-triangle"></i> {{errors.model.phone.firstObject}}</div>
          {{/if}}
        </div>
      </div>


      <div class="well">
        <button type="submit" class="btn btn-primary" {{action 'save'}}><i class="fa fa-save"></i> Αποθήκευση</button>
        {{#link-to 'organizations.index' class="btn btn-default"}}<i class="fa fa-rotate-left"></i> Επιστροφή{{/link-to}}
        <button type="submit" class="btn btn-danger pull-right" {{action 'delete'}}><i class="fa fa-remove"></i> Διαγραφή</button>
      </div>
    </form>
  </div>
</div>