<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-university"></i> Δημιουργία νέας εταιρίας</h3>
      </div>
      <div class="panel-body">
        <form>
          <div class="form-group">
            <label for="name">Όνομα</label>
            {{input value=model.name class="form-control"}}
          </div>
          
          <div class="well">
            <button type="submit" class="btn btn-primary" {{action 'create'}}>Αποθήκευση</button>
            {{#link-to 'organizations.index' class="btn btn-danger"}}Επιστροφή{{/link-to}}
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

